<div class="movie-page-container">
    <div class="movie-image-container">
        <img src="{{movieFromDB.translations.0.poster.og}}" alt="poster">
    </div>
    <div id="voteButtons">
        <form action="/votes/{{movieFromDB._id}}/voteLike" method="POST">
            <button type="submit"><img src="https://www.pngkey.com/png/full/26-265943_like-it-success-png.png"/></button>
        </form>
        <form action="/votes/{{movieFromDB._id}}/voteDislike" method="POST">
            <button type="submit"><img src="https://cdn0.iconfinder.com/data/icons/social-reaction-and-emoji/519/dislike-512.png"/></button>
        </form>
    </div>
    <div class="details-container">
        <h4>Overview</h4>
        <p> {{movieFromDB.translations.0.overview}}</p>
        <p> <strong>{{movieFromDB.year}}</strong></p>
    </div>

</div>